<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/search_book_iv_cover"
        android:layout_width="@dimen/book_cover_width"
        android:layout_height="@dimen/book_cover_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_book_loading" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/search_book_iv_cover"
        android:layout_alignTop="@id/search_book_iv_cover"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/search_book_iv_cover">

        <TextView
            android:id="@+id/search_book_tv_name"
            style="@style/NB.Theme.TextAppearance.Common.SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/nb.text.default"
            android:textSize="16sp"
            tools:text="武侠世界自由行" />

        <TextView
            android:id="@+id/search_book_tv_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_book_tv_name"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/nb.search.book.brief"
            android:textColor="@color/nb.text.common_h2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/search_book_tv_lastchapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_book_tv_brief"
            android:text="@string/nb.search.book.last_chapter" />
    </RelativeLayout>
</RelativeLayout>